      var td2 = tr[i].getElementsByTagName("td")[4];
      txtValue2 = td2.textContent || td2.innerText;
      if (tenhocphan.options[tenhocphan.selectedIndex].text===txtValue && malop.options[malop.selectedIndex].text===txtValue2){

    option.text = mang_tennhom[i];
    tennhom.add(option);
  }
});
function filter() {
  //alert(sel.options[sel.selectedIndex].text);
  var malop = document.getElementById("malop");
  var tennhom = document.getElementById("tennhom");
  var tenhocphan = document.getElementById("tenhocphan");
  var group = new Array;
  group[0] = malop;
  group[1] = tennhom;
  group[2] = tenhocphan;
  var number=0;
  var tbody = document.getElementById("table_body");
  var tr = tbody.getElementsByTagName("tr");
  for (var i = 0; i < tr.length; i++) {
    tr[i].style.display = "";
  }
  for(var gr in group){
    if(group[gr].options[group[gr].selectedIndex].value == "none")
    {
      continue;
    }
    switch(group[gr].className) {
      case "ma_lop":
        number=4;
      break;
      case "ten_nhom":
        number=5;
      break;
      case "ten_hoc_phan":
        number=8;
      break;
    }
    //console.log(typeof(group[gr].options[group[gr].selectedIndex].value));
    for (var i = 0; i < tr.length; i++) {
      var td = tr[i].getElementsByTagName("td")[number];
      if (td) {
        txtValue = td.textContent || td.innerText;
        if (group[gr].options[group[gr].selectedIndex].text===txtValue) {
          //tr[i].style.display = "";
        } else {
          tr[i].style.display = "none";
        }
      }
    }
  }
  var tiet=0;
  var tbody_fil = document.getElementById("table_body_fil");
  var tr_fil = tbody_fil.getElementsByTagName("tr");
  var tbody_tiet = document.getElementById("tiet");
  var tr_tiet = tbody_tiet.getElementsByTagName("tr");
  for (var i = 0; i < tr.length; i++) {
    if(tr[i].style.display == ""){
      var td_tiet = tr_tiet[i].getElementsByTagName("td")[0];
      tiet = tiet + Number(td_tiet.innerText);
    }
  }
  var t_d_fil = tr_fil[0].getElementsByTagName("td")[2];
  var t_d_fil2 = tr_fil[0].getElementsByTagName("td")[3];
  t_d_fil.innerText = tiet;
  t_d_fil2.innerText = tiet*6/10;
}
